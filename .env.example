# Telegram bot
YT_BOT_TOKEN=PUT_TELEGRAM_BOT_TOKEN_HERE
BROADCAST_CHAT_IDS=
ADMIN_CHAT_IDS=

# Storage and public links
STORAGE_DIR=/var/www/example.com/youtube-direct-bot-downloads
PUBLIC_URL_BASE=https://example.com/youtube-direct-bot-downloads
DATA_DIR=./data
COOKIES_FILE=./secrets/cookies.txt

# Cookie handling
USE_BROWSER_COOKIES=0
YT_COOKIES_FROM_BROWSER=chrome
COOKIE_AUTO_REFRESH_ON_START=1
COOKIE_MAX_AGE_HOURS=6

# Database state store
STATE_DB_DSN=postgresql://ytbot:CHANGE_ME@127.0.0.1:5432/youtube_direct_bot
STATE_DB_REQUIRE_PGVECTOR=1
VIDEO_EMBED_DIM=1536

# Optional AI providers
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
HF_TOKEN=

# Optional AI config
VIDEO_QA_BACKEND=local
VIDEO_AI_BACKEND=local
VIDEO_LOCAL_LLM_URL=http://127.0.0.1:11434
VIDEO_LOCAL_LLM_MODEL=llama3.2:3b
VIDEO_LOCAL_LLM_KEEP_ALIVE=30m
VIDEO_CLAUDE_MODEL=claude-3-5-sonnet-latest
VIDEO_QA_MODEL=gpt-4.1-mini
VIDEO_AI_MODEL=gpt-4.1-mini
VIDEO_QA_QUERY_PLANNER=0
VIDEO_QA_LLM_RERANK=0
VIDEO_QA_RETRIES=1

# Runtime behavior
LOCAL_TZ_NAME=America/New_York
RETENTION_DAYS=60
MAX_HEIGHT=1080
ENABLE_INTERNAL_CLEANUP=0
ENABLE_FULL_REPLAY_RETRY=0
