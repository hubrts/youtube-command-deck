# Copy this file to ~/.config/ytdl-bot.env and set real values.
YT_BOT_TOKEN=PUT_YOUR_TELEGRAM_TOKEN_HERE
HF_TOKEN=PUT_YOUR_HF_TOKEN_HERE
COOKIES_FILE=/home/illia/youtube_direct_bot/cookies.txt
DATA_DIR=/home/illia/youtube_direct_bot/data
STORAGE_DIR=/var/www/wetwilly.tech/youtube-direct-bot-downloads
PUBLIC_URL_BASE=https://wetwilly.tech/youtube-direct-bot-downloads
# PostgreSQL state backend (required). Ensure pgvector is installed in DB.
# App dependency: pip install "psycopg[binary]"
STATE_DB_DSN=postgresql://ytbot:CHANGE_ME@127.0.0.1:5432/youtube_direct_bot
STATE_DB_REQUIRE_PGVECTOR=1
VIDEO_EMBED_DIM=1536
# Optional local time/session config for bot messages/archive grouping.
LOCAL_TZ_NAME=America/New_York
LOCAL_TIME_LABEL=Local time
SESSION_SPLIT_HOUR=17
# VPS/headless default: use exported cookies file, not browser extraction.
USE_BROWSER_COOKIES=0
YT_COOKIES_FROM_BROWSER=chrome

# Close temporary browser window/profile after cookie export.
COOKIE_CLOSE_BROWSER_AFTER_EXPORT=1

# Local LLM (Ollama) defaults for transcript analysis + /ask Q&A.
VIDEO_AUTO_ANALYZE_ON_SAVE=1
VIDEO_USE_AI_ANALYZER=1
# Backends: local | openai | claude | auto
VIDEO_AI_BACKEND=claude
VIDEO_LOCAL_LLM_URL=http://127.0.0.1:11434
VIDEO_LOCAL_LLM_MODEL=llama3.2:3b
ANTHROPIC_API_KEY=PUT_YOUR_CLAUDE_API_KEY_HERE
VIDEO_CLAUDE_MODEL=claude-3-5-sonnet-latest
VIDEO_AI_CLAUDE_MODEL=claude-3-5-sonnet-latest
VIDEO_CLAUDE_ENABLE_RATE_LIMIT=1
VIDEO_CLAUDE_RPM=5
VIDEO_AI_OUTPUT_LANG=auto
VIDEO_AI_MAX_CHARS=24000
VIDEO_AI_TIMEOUT_SEC=240
VIDEO_AI_ANALYSIS_TTL_HOURS=24

VIDEO_QA_BACKEND=claude
VIDEO_LOCAL_LLM_MODEL=llama3.2:3b
VIDEO_QA_CLAUDE_MODEL=claude-3-5-sonnet-latest
VIDEO_QA_CLAUDE_FALLBACK_MODEL=claude-3-5-haiku-latest
VIDEO_QA_MAX_CHARS=24000
VIDEO_QA_TIMEOUT_SEC=180
VIDEO_QA_ALLOW_LOCAL_FALLBACK=1
VIDEO_QA_RETRIES=1
VIDEO_QA_QUERY_PLANNER=1
VIDEO_QA_LLM_RERANK=1
VIDEO_QA_CHUNK_LINES=8
VIDEO_QA_CHUNK_OVERLAP=2
VIDEO_QA_TOP_CHUNKS=6

VIDEO_EMBED_BACKEND=auto
VIDEO_EMBED_MODEL=text-embedding-3-small
VIDEO_LOCAL_EMBED_MODEL=nomic-embed-text
VIDEO_EMBED_TIMEOUT_SEC=90

RESEARCH_MAX_QUERIES=8
RESEARCH_RESULTS_PER_QUERY=8
RESEARCH_MAX_VIDEOS=6
RESEARCH_OWNER_CONFIDENCE_MIN=0.55
